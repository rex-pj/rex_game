{
  "version": "0.2.0",
  "configurations": [
    {
      "preLaunchTask": "rust: cargo build",
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/rex_game",
      "args": ["host=dev"],
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "HOST", "value": "dev" }]
    }
  ]
}
